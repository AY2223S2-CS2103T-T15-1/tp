<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox styleClass="root" stylesheets="@DnD.css">
         <children>
            <Label fx:id="entityNameLabel" text="Name" textFill="#1e1515">
               <font>
                  <Font size="34.0" />
               </font>
            </Label>
            <Label fx:id="entityClassificationLabel" text="Classification" textFill="#181717">
               <font>
                  <Font size="34.0" />
               </font>
            </Label>
            <Label fx:id="entityDetailsLabel" maxHeight="1.7976931348623157E308" minHeight="-Infinity" text="Details" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <VBox>
               <children>
                  <HBox minWidth="-Infinity" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="inventoryLabel" text="Inventory" HBox.hgrow="NEVER" />
                        <Pane maxHeight="0.0" HBox.hgrow="ALWAYS" />
                        <Label fx:id="inventoryValueLabel" text="Total Value:" textAlignment="RIGHT" HBox.hgrow="NEVER" />
                     </children>
                  </HBox>
                  <StackPane fx:id="inventoryPlaceholder" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
